<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_verification"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/layoutVerificationBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/send_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Please enter the 5-digit activation code that was sent to this number : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_mediocre" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/common_padding_margin"
                    android:textSize="@dimen/text_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_padding_margin"
                    android:layout_marginTop="@dimen/large_padding_margin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_padding_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="\u2013"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_huge"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:theme="@style/VerificationEditText"/>

                    <EditText
                        android:id="@+id/et2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_padding_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="\u2013"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="@dimen/text_huge"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:theme="@style/VerificationEditText"/>

                    <EditText
                        android:id="@+id/et3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_padding_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="\u2013"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_huge"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:theme="@style/VerificationEditText"/>

                    <EditText
                        android:id="@+id/et4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_padding_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="\u2013"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="@dimen/text_huge"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:theme="@style/VerificationEditText"/>

                    <EditText
                        android:id="@+id/et5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_padding_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="\u2013"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="@dimen/text_huge"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:theme="@style/VerificationEditText"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_padding_margin"
                    android:layout_marginBottom="@dimen/small_padding_margin"
                    android:gravity="center"
                    android:text="@string/not_get_code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/resend_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xml_bg_rounded_border_white_3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="@dimen/common_padding_margin"
                            android:text="RESEND CODE"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>
                </LinearLayout>

                <!--<Button-->
                <!--android:id="@+id/back"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Back"/>-->
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>