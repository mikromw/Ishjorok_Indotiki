<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_padding_margin"
    android:gravity="left">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/chat_bubble_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/status_layout"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dialog_message_out_bg">
                <LinearLayout
                    android:id="@+id/chat_image_layout"
                    android:layout_width="@dimen/img_small3_size"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_chat_image"
                            android:layout_width="@dimen/img_small3_size"
                            android:layout_height="@dimen/img_small3_size"
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true" />
                        <LinearLayout
                            android:id="@+id/bt_action"
                            android:layout_width="wrap_content"
                            android:visibility="visible"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true"
                            android:background="@drawable/xml_bg_rounded_solid_white_20dp"
                            android:padding="5dp">
                            <ImageView
                                android:id="@+id/img_action"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/ic_base_file_download_black"/>
                            <TextView
                                android:id="@+id/text_action"
                                android:textAlignment="center"
                                android:text="@string/download"
                                android:textColor="@color/mdtp_light_gray"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/progress_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <ProgressBar
                                android:id="@+id/progress"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/progress_text"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:text="aasfdadsf"
                                android:visibility="gone"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:shadowDx="0.5"
                                android:shadowDy="0.5"
                                android:shadowRadius="1.0"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/shared_location_layout"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:src="@mipmap/ic_flag"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_padding_margin"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_medium"
                            android:textColor="@color/black"
                            android:text="Location"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/location"
                            android:textSize="@dimen/text_medium"
                            android:textColor="@color/black"
                            android:text="asdsadassadasda"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/message_and_time_stamp_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/chat_message"
                            android:text="asdasdaasdasdaaaaaaaaasd"
                            android:textSize="@dimen/text_medium"
                            android:paddingLeft="@dimen/small_padding_margin"
                            android:paddingRight="@dimen/small_padding_margin"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/status_layout"
            android:layout_marginLeft="@dimen/small_padding_margin"
            android:layout_marginBottom="@dimen/tiny_padding_margin"
            android:layout_alignBottom="@+id/chat_bubble_layout"
            android:gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chat_time"
                android:text="7:45pm"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_tiny"
                android:layout_gravity="right|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
