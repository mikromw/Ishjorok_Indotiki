<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/submenuhelp_item_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:id="@+id/deposit_nav_layout"
            android:layout_margin="@dimen/small_padding_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:padding="@dimen/small_padding_margin"
                android:text="asdf"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                />

            <ImageView
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_gravity="center|right"
                app:srcCompat="@mipmap/ic_base_arrow_right_orange"
                android:layout_margin="@dimen/mediocre_padding_margin" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
