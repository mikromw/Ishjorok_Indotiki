<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:id="@+id/itemlayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/icon_medium_size"
                android:layout_height="@dimen/icon_medium_size"
                android:background="@drawable/xml_bg_circle_grey">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tv_number"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/subject_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/small_padding_margin"
                android:gravity="left|center"
                android:text="asdf"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium" />



        </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>
