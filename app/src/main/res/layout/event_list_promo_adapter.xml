                        <!--android:text="2017-02-29"-->
                        <!--android:textColor="#070707"-->
                        <!--android:textSize="@dimen/text_small" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>