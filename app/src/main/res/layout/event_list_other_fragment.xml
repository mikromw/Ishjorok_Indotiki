<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEventOtherList"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_loading_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/small_padding_margin"
        android:layout_marginLeft="@dimen/small_padding_margin"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/layoutNoData"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNoData"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/sorry_there_is_no_others"
                android:textSize="@dimen/text_mediocre"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listEventOther"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            android:divider="#f5f2f2"
            android:smoothScrollbar="true"
            android:scrollingCache="true"
            android:animationCache="true"
            android:dividerHeight="1dp"  />
        </LinearLayout>
</LinearLayout>