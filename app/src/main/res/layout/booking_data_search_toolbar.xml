<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/MyMaterialTheme">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:popupTheme="@style/MyMaterialTheme" >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_padding_margin"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/buttonLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/common_padding_margin">
                <ImageView
                    android:id="@+id/ic_action"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_base_search_grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/atv_places"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/large_padding_margin"
                        android:background="@color/white"
                        android:hint="@string/location"
                        android:visibility="visible"
                        android:inputType="text"
                        android:minLines="1"
                        android:maxLines="1"/>
                    <EditText
                        android:id="@+id/tv_map_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/large_padding_margin"
                        android:background="@color/white"
                        android:hint="@string/location"
                        android:visibility="gone"
                        android:text=""
                        android:minLines="1"
                        android:inputType="text"
                        android:maxLines="1"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/ic_clear"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@mipmap/ic_base_close_grey"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>

