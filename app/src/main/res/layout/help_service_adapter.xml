<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemlayout"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding_margin"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/icon_medium_size"
            android:layout_height="@dimen/icon_medium_size"
            android:layout_margin="@dimen/small_padding_margin"
            android:visibility="gone"
            android:src="@mipmap/ic_logo_motorcycle"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaa"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/black"/>
    </LinearLayout>

</RelativeLayout>