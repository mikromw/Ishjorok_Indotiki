<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/background_item"
        android:layout_margin="@dimen/small_padding_margin"
        android:layout_width="@dimen/img_little2_size"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/img_little2_size"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_indotiki_food_no_image"/>
                <ImageView
                    android:id="@+id/iv_market_photo"
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:layout_marginLeft="@dimen/common_padding_margin"
                    android:layout_marginRight="@dimen/common_padding_margin"
                    android:layout_width="@dimen/img_little2_size"
                    android:layout_height="@dimen/img_little_size"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_market_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:text="dsadd"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>
</LinearLayout>