<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/menu_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="@dimen/common_padding_margin"
                    android:paddingLeft="@dimen/common_padding_margin"
                    android:paddingRight="@dimen/common_padding_margin"
                    android:paddingBottom="@dimen/micro_padding_margin"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_gambar"
                        android:layout_width="@dimen/icon_large_size"
                        android:layout_height="@dimen/icon_large_size"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_logo_food"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_padding_margin"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_text"
                        android:text="@string/item_food"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_medium"
                        android:typeface="sans"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>