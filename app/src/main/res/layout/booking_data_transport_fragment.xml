<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/booking_in_progress_data_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/grey_200"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_margin"
        android:background="@color/white"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/common_padding_margin">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/promo_booking"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_200"/>
            <LinearLayout
                android:id="@+id/promo_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="Promo code : SERBA2000"
                    android:gravity="center"
                    android:textSize="@dimen/text_medium"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_200" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/large_padding_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/icon_tiny_size"
                        android:layout_height="@dimen/icon_tiny_size"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fee"
                        android:textColor="#000"
                        android:textSize="@dimen/text_medium" />
                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/common_padding_margin"
                        android:layout_marginRight="@dimen/common_padding_margin"
                        android:text="3.0 km"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/transportFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp. 30.000"
                            android:textColor="#000"
                            android:textSize="@dimen/text_medium" />
                        <TextView
                            android:id="@+id/transportFeeDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp. 30.000"
                            android:gravity="right"
                            android:textColor="#000"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_medium"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_200" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_fee"
                        android:textColor="#000"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/icon_tiny_size"
                        android:layout_height="@dimen/icon_tiny_size"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_total_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp. 30.000"
                            android:textColor="#000"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/deposit_payment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_200" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/common_padding_margin"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/payment_image"
                            android:visibility="gone"
                            android:layout_width="@dimen/icon_tiny_size"
                            android:layout_height="@dimen/icon_tiny_size"
                            android:src="@mipmap/ic_base_payment_black" />
                        <TextView
                            android:id="@+id/payment_text"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="@string/pay_with_deposit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_pay_with_deposit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="- Rp. 10.000"
                                android:gravity="right"
                                android:textColor="#000"
                                android:textSize="@dimen/text_medium"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tip_fee_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/distance_picture"
                        android:visibility="gone"
                        android:layout_width="@dimen/icon_tiny_size"
                        android:layout_height="@dimen/icon_tiny_size"
                        android:src="@mipmap/ic_base_tip_black" />

                    <TextView
                        android:id="@+id/tvTipTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip "
                        android:textColor="#000"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tip_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp. 30.000"
                            android:textColor="#000"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_200" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTotalPaidTitle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/total_paid_in_cash"
                    android:textSize="@dimen/text_mediocre" />
                <TextView
                    android:id="@+id/tvTotalPaid"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="Rp. 14.990"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_large"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_padding_margin"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/common_padding_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvBookingDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/booking_detail"
                    android:gravity="center"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:ellipsize="end"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_200"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/large_padding_margin"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_tiny_size"
                        android:layout_height="@dimen/icon_tiny_size"
                        android:src="@mipmap/ic_from_place"
                        android:id="@+id/imageView2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="@string/from"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_medium"/>
                        <TextView
                            android:id="@+id/from"
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="Gang Buntu"
                            android:textSize="@dimen/text_medium"/>
                        <TextView
                            android:id="@+id/fromDetail"
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="Gang Buntu"
                            android:textSize="@dimen/text_medium"/>
                        <TextView
                            android:id="@+id/location_detail"
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="Gang Buntu"
                            android:textSize="@dimen/text_medium"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/icon_tiny_size"
                        android:layout_height="@dimen/icon_tiny_size"
                        android:src="@mipmap/ic_to_place" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/to"
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="Gang tak Berujung"
                            android:textSize="@dimen/text_medium"/>
                        <TextView
                            android:id="@+id/toDetail"
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="Gang tak Berujung"
                            android:textSize="@dimen/text_medium"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/common_padding_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/icon_tiny_size"
                        android:layout_height="@dimen/icon_tiny_size"
                        android:src="@mipmap/ic_base_time_red"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="@string/booking_time"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/request_time"
                            android:layout_marginLeft="@dimen/common_padding_margin"
                            android:layout_marginRight="@dimen/common_padding_margin"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="19-10-2015, 10:44"
                            android:textSize="@dimen/text_medium"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginLeft="@dimen/common_padding_margin"
                                android:layout_marginRight="@dimen/common_padding_margin"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:text="@string/accepted_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/accept_time"
                                android:layout_marginLeft="@dimen/common_padding_margin"
                                android:layout_marginRight="@dimen/common_padding_margin"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:text="19-10-2015, 10:44"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_medium"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>