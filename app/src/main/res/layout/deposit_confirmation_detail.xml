<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <include layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/common_padding_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/deposit_confirmation_layout">
            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_finish">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding_margin"
                        android:layout_marginBottom="@dimen/common_padding_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/tiny_padding_margin"
                            android:text="@string/payment_evidence"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/small_padding_margin"
                                android:background="@drawable/xml_bg_border_grey"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_payment_evidence"
                                    android:layout_width="@dimen/img_tiny2_size"
                                    android:layout_height="@dimen/img_tiny2_size"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/img_no_image" />
                            </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btn_upload_payment_receipt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/small_padding_margin"
                                    android:background="@drawable/xml_btn_primary"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/common_padding_margin">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/select_photo"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_small" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_order_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding_margin"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/order_code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_order_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_order_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_order_code"
                                android:text="Rp.100.000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_nominal_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_200"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:text="@string/nominal_deposit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_nominal_deposit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_nominal_deposit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_nominal_deposit"
                                android:text="Rp.100.000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_kode_unik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:text="@string/transaction_id"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_kode_unik"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_kode_unik"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_kode_unik"
                                android:text="123"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_padding_margin"
                        android:background="@color/grey_200"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pulsa_total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_total_deposit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_total"
                                android:text="Rp.100.000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_total_warning"
                                android:layout_width="@dimen/icon_mini_size"
                                android:layout_height="@dimen/icon_mini_size"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_pulsa_warning" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/purchase_for"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_purchase_for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_balance_additions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_purchase_for"
                                android:text="@string/balance_additions"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_200"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pay_with"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_pay_with"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_pay_with"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_pay_with"
                                android:text="BCA"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rekening_tujuan"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_account_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_nama_rekening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_account_bank"
                                android:text="PT. PUNDI MAS BERJAYA"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_200"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/no_rek"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_no_rekening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_no_rekening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_no_rekening"
                                android:text="8210436333"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_your_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/nama_rek_anda"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_name_of_your_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_name_of_your_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_name_of_your_bank"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_your_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_200"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/no_rek_anda"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_name_of_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_nomor_rekening_anda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_name_of_bank"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_time_confirmation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/confirmation_time"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titik_dua_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/titik_dua_time"
                                android:text="08:16, 15-April-2017"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_200"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_padding_margin">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_tiny" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/titik_dua_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/titik_dua_status"
                                android:text="@string/status_deposit_confirmation3"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_tiny"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/btn_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/common_padding_margin"
                android:background="@drawable/xml_btn_primary_pressed"
                android:text="@string/already_paid"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/view_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"/>
    <include layout="@layout/view_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"/>
</RelativeLayout>