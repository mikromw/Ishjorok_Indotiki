<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <layer-list>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <padding android:top="5dp" android:left="5dp"
                        android:right="5dp" android:bottom="5dp"/>
                    <gradient android:angle="270"
                        android:endColor="@color/amber_400" android:startColor="@color/amber_400" />
                    <stroke android:width="1dp" android:color="@color/grey_200" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="5dp" android:left="5dp"
                        android:right="5dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
        <item>
